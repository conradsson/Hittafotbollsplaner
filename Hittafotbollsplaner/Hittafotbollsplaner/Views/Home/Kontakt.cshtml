@{
    ViewBag.Title = "Kontakt";
}

<div class="row ontoppageKontakt content">

        <div class="toppanel"><a class="pull-left" href="/Home/Index" style="display:inline; margin-left: 2%; margin-top: 2%;">&lt; Till start</a><h3 class="panel-title text-center" style="display:inline; margin-left:-10%; margin-bottom: 2%;">Kontakt</h3></div>

    <div class="panel-body">

        <form class="form-horizontal">
            <fieldset>
                <div class="form-group">
                    <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputEmail" placeholder="Email" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">Namn</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="inputName" placeholder="Namn" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="textArea" class="col-lg-2 control-label">Text</label>
                    <div class="col-lg-10">
                        <textarea class="form-control" rows="3" id="textArea" required></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Skicka</button>
                    </div>
                </div>
            </fieldset>
        </form>

    </div>
</div>