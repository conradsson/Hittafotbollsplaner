@model Hittafotbollsplaner.Models.EmailFormModel
@{
    ViewBag.Title = "Kontakt";
}

@if (@ViewBag.SuccessEmail != null)
{
    @Html.Partial("_SuccessEmail")
}

<div class="ontoppageKontakt">
    @using (Html.BeginForm("Kontakt", "Home"))
    {
        @Html.AntiForgeryToken()
        <div class="toppanel"><h3 class="panel-title text-center" style="margin-bottom: .5%; margin-top: 2%; margin-left: 3%; font-size:x-large;">Kontakta oss<span class="glyphicon glyphicon-question-sign pull-right hjalpKnapp" aria-hidden="true" style="margin-right:2%;"><span class="hjalpText">Skriv in namn och email för att vi enkelt ska kunna ge dig så bra och snabb feedback som möjligt. <br /><br /> Skriv in ditt problem, fråga eller annat du vill säga i meddelande-fältet.</span></span></h3>
        <p style="text-align: center; margin-bottom: 2%;">Har du frågor eller behöver hjälp på denna webbplats? <br />Kontakta oss gärna med hjälp av formuläret nedan.</p>
    </div>
      
        <div class="kontaktDiv col-md-offset-2 col-md-8">
            <div class="form-group">
                <label class="col-md-offset-2 col-md-2 control-label" for="FromName" style="text-align:right;">Namn</label>
                <div class="col-md-5" style="margin-bottom: 2%; padding-left:0px;">
                    @Html.TextBoxFor(m => m.FromName, new { @class = "form-control"})
                    @Html.ValidationMessageFor(m => m.FromName)
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="form-group">
                <label class="col-md-offset-2 col-md-2 control-label" for="FromName" style="text-align:right;">Email</label>
                <div class="col-md-5" style="margin-bottom: 2%; padding-left:0px;">
                    @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FromEmail)
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="form-group">
                <label class="col-md-offset-2 col-md-2 control-label" for="FromName" style="text-align:right;">Meddelande</label>
                <div class="col-md-5" style="margin-bottom: 2%; padding-left:0px;">
                    @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Message)
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4" style="margin-top: 3%; margin-bottom: 20%;">
                    <input type="submit" class="btn btn-default" value="Skicka" style="width:100%; font-size: larger; background-color: #2ab74b;" />
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <div class="col-md-2"></div>
            }
        </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}