@{
    ViewBag.Title = "Sök efter fotbollsplaner";
    @model Hittafotbollsplaner.Models.FotbollsplanerModels
}
<link rel="stylesheet" href="http://code.jquery.com/ui/1.9.1/themes/smoothness/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>



<script>
$(document).ready(function () {
    $("#search").autocomplete({
        source: function (request, response) {
            $.ajax({
                url: "/Home/GetAutoCompleteData",
                type: "POST",
                dataType: "json",
                data: { term: request.term },
                success: function (data) {
                    response($.map(data, function (item) {
                        return {
                            label: item.Namn, value: item.Adress
                        }
                    }))
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        }
    });
});
</script>




<div class="jumbotron">
    <div class="form-group searchForm">
        <label for="search">Sök efter fotbollsplan:</label>
        <input type="search" class="form-control" id="search" name="search" placeholder="Adress eller Namn">
    </div>
</div>

<div id="googleMap" style="width:100%;height:400px;"></div>

<script>
function myMap() {
var mapProp= {
    center:new google.maps.LatLng(51.508742,-0.120850),
    zoom:5,
};
var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
}
</script>



<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
        <h3>Populära</h3>
        <!--PartialView som hämtar populära-->
        <div class="list-group">

            @using (Html.BeginForm("Index", "Home"))
            {
                foreach (var item in Model.fotbollsplaner) // RADAR UPP FOTBOLLSPLANERS NAMN I "POPULÄRA"
                {
                    <a href="~/fotbollsplaners/Index" class="list-group-item list-group-item">@item.Namn</a>
                }
            }
        </div>
    </div>
    <div class="col-md-3">
        <h3>Nyligen tillagda</h3>
        <!--PartialView som hämtar nyligen tillagda-->
        <div class="list-group">

            @using (Html.BeginForm("Index", "Home"))
            {
                foreach (var item in Model.senasteFotbollsplaner) // RADAR UPP FOTBOLLSPLANERS NAMN I "POPULÄRA"
                {
                    <a href="#" class="list-group-item list-group-item">@item.Namn<span class="glyphicon glyphicon-star pull-right" style="color:gold;"></span>
                </a>
                }
            }
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

<script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBdYS_UAzWfdbIIbydr7rIwpvqtKCUUEBY&callback=myMap"></script>
